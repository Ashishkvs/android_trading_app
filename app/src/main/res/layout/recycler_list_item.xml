<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fileIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/upload_icon"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/file_icon" />


        <TextView
            android:id="@+id/upload_fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fileIcon"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="filename.type"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/upload_loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/upload_fileName"
            android:layout_marginEnd="18dp"
            app:srcCompat="@drawable/progress" />
    </LinearLayout>

</RelativeLayout>